{
  "name": "apio",
  "displayName": "Apio",
  "description": "One-click build for FPGA projects",
  "version": "0.1.6",
  "publisher": "fpgawars",
  "icon": "media/market-icon.png",
  "engines": {
    "vscode": "^1.85.0",
    "node": "22.x"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "fpga",
    "apio",
    "verilog",
    "system verilog",
    "systemverilog",
    "icestorm",
    "yosys",
    "ice40",
    "ecp5",
    "gowin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fpgawars/apio-vscode.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:apio.ini"
  ],
  "main": "./src/main.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apioContainer",
          "title": "Apio FPGA",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "apioContainer": [
        {
          "name": "NOTICE",
          "id": "apio.sidebar.notice",
          "type": "webview",
          "icon": "$(info)",
          "when": "apio.sidebar.notice.enabled"
        },
        {
          "name": "PROJECT",
          "id": "apio.sidebar.project",
          "type": "tree",
          "icon": "$(project)",
          "when": "apio.sidebar.project.enabled"
        },
        {
          "name": "TOOLS",
          "id": "apio.sidebar.tools",
          "type": "tree",
          "icon": "$(tools)",
          "when": "apio.sidebar.tools.enabled"
        },
        {
          "name": "HELP",
          "id": "apio.sidebar.help",
          "type": "tree",
          "icon": "$(question)",
          "when": "apio.sidebar.help.enabled"
        }
      ]
    },
    "commands": [
      {
        "command": "apio.context.sim",
        "title": "Apio sim",
        "enablement": "apio.apioIniExists"
      },
      {
        "command": "apio.context.test",
        "title": "Apio test",
        "enablement": "apio.apioIniExists"
      },
      {
        "command": "apio.context.format",
        "title": "Apio format",
        "enablement": "apio.apioIniExists"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "apio.context.sim",
          "group": "2_workspace@1",
          "when": "apio.apioIniExists && resourceFilename =~ /_tb[.](v|sv)$/ && !explorerResourceIsFolder && resourceScheme == file"
        },
        {
          "command": "apio.context.test",
          "group": "2_workspace@2",
          "when": "apio.apioIniExists && resourceFilename =~ /_tb[.](v|sv)$/ && !explorerResourceIsFolder && resourceScheme == file"
        },
        {
          "command": "apio.context.format",
          "group": "2_workspace@3",
          "when": "apio.apioIniExists && resourceFilename =~ /[.](v|sv|vh|svh)$/ && !explorerResourceIsFolder && resourceScheme == file"
        }
      ],
      "editor/context": [
        {
          "command": "apio.context.sim",
          "group": "1_apio@1",
          "when": "apio.apioIniExists && resourceFilename =~ /_tb[.](v|sv)$/ && resourceScheme == file"
        },
        {
          "command": "apio.context.test",
          "group": "1_apio@2",
          "when": "apio.apioIniExists && resourceFilename =~ /_tb[.](v|sv)$/ && resourceScheme == file"
        },
        {
          "command": "apio.context.format",
          "group": "1_apio@3",
          "when": "apio.apioIniExists && resourceFilename =~ /[.](v|sv|vh|svh)$/ && resourceScheme == file"
        }
      ]
    },
    "languages": [
      {
        "id": "gowin-cst",
        "aliases": [
          "Gowin Constraint",
          "gowin-cst",
          "CST"
        ],
        "extensions": [
          ".cst"
        ],
        "configuration": "./languages/gowin-cst/language-configuration.json"
      },
      {
        "id": "ice40-pcf",
        "aliases": [
          "iCE40 PCF",
          "ice40-pcf",
          "PCF"
        ],
        "extensions": [
          ".pcf"
        ],
        "configuration": "./languages/ice40-pcf/language-configuration.json"
      },
      {
        "id": "ecp5-lpf",
        "aliases": [
          "ECP5 LPF",
          "ecp5-lpf",
          "LPF"
        ],
        "extensions": [
          ".lpf"
        ],
        "configuration": "./languages/ecp5-lpf/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gowin-cst",
        "scopeName": "source.gowin-cst",
        "path": "./languages/gowin-cst/gowin-cst.tmLanguage.json"
      },
      {
        "language": "ice40-pcf",
        "scopeName": "source.ice40-pcf",
        "path": "./languages/ice40-pcf/ice40-pcf.tmLanguage.json"
      },
      {
        "language": "ecp5-lpf",
        "scopeName": "source.ecp5-lpf",
        "path": "./languages/ecp5-lpf/ecp5-lpf.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "test": "vscode-test"
  },
  "author": "",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/fpgawars/apio/issues"
  },
  "homepage": "https://github.com/fpgawars/apio-vscode",
  "dependencies": {
    "extract-zip": "^2.0.1",
    "tar": "^6.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0"
  }
}