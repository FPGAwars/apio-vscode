{
  "name": "apio",
  "displayName": "Apio FPGA",
  "description": "One-click build for Apio FPGA projects",
  "version": "0.1.0",
  "publisher": "FPGAwars",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "fpga",
    "apio",
    "verilog",
    "system verilog",
    "systemverilog",
    "icestorm",
    "yosys",
    "ice40",
    "ecp5",
    "gowin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fpgawars/apio-vscode.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:apio.ini"
  ],
  "main": "./main.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apioContainer",
          "title": "Apio FPGA",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "apioContainer": [
        {
          "name": "NOTICE",
          "id": "apio.sidebar.notice",
          "icon": "media/sidebar-icon.svg",
          "type": "webview",
          "when": "apio.sidebar.notice.enabled"
        },
        {
          "name": "PROJECT",
          "id": "apio.sidebar.project",
          "icon": "media/sidebar-icon.svg",
          "type": "tree",
          "when": "apio.sidebar.project.enabled"
        },
        {
          "name": "TOOLS",
          "id": "apio.sidebar.tools",
          "icon": "media/sidebar-icon.svg",
          "type": "tree",
          "when": "apio.sidebar.tools.enabled"
        },
        {
          "name": "HELP",
          "id": "apio.sidebar.help",
          "icon": "media/sidebar-icon.svg",
          "type": "tree",
          "when": "apio.sidebar.help.enabled"
        }
      ]
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "lint:verbose": "eslint . --ext .js --format stylish",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "author": "",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/fpgawars/apio/issues"
  },
  "homepage": "https://github.com/fpgawars/apio-vscode",
  "dependencies": {
    "extract-zip": "^2.0.1",
    "tar": "^6.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0"
  }
}
